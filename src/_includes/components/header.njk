{% macro localLink(linkName, title) %}
<li ><a href='javascript:void(0);'id='{{linkName}}-link' onclick='sectionScroller("{{linkName}}")'>{{title}}</a></li>
{% endmacro %}
{% macro pageLink(linkName, title) %}
<li ><a href='/{{linkName | slug}}'>{{title | camelToSpace}}</a></li>
{% endmacro %}

<div class='header-container'>
    <div class='header'>
        <a href='javascript:void(0);' class='icon' id='header-dropdown'><i class="fa fa-bars"></i></a>
        <nav>
            <ul class='links social'>
                <li><a href="https://ca.linkedin.com/in/waltermuschenheim/" class="icon"><i class="fa fa-linkedin"></i></a></li>
                <li><a href="https://github.com/WalterMuschenheim/" class="icon"><i class="fa fa-github"></i></a></li>
            </ul>
            <ul class='links local'>
                {% for section in collections[collection] %}
                {{localLink(section.data.linkTitle, section.data.title)}}
                {% endfor %}
                {% if pagination.pages.length > 1 %}
                {% for pageEntry in pagination.pages %}
                <li><a href="{{ pagination.hrefs[ loop.index0 ] }}"{% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page"{% endif %}>{{ pageEntry | camelToSpace }}</a></li>
                {% endfor %}
                {% endif %}
                <li><a href='/cv'>curriculum vitae</a></li>
            </ul>
        </nav>
    </div>
    <h1 class='title'>{{site.title}}</h1>
    <div class='subtitle'>
        <h3 class='fr'>{{bio.profession.fr | safe}}</h3>
        <h3 class='en'>{{bio.profession.en | safe}}</h3>
    </div>
    <div class='spacer'></div>
</div>